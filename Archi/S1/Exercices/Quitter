#!/bin/bash

if [ $# -ne 2 ]
then    
    echo "Vous devez saisir 2 paramÃ¨tres: heure (HHMM) et 'commentaire'"
    exit 2
fi

heureRDV=$1
comentUSER=$2

if [ ! -d ~/.quitter ]
then
mkdir ~/.quitter
fi

echo "$heureRDV: $comentUSER" >> ~/.quitter/horaires.db
cd ~/.quitter
nbLignes=$(< horaires.db wc -l)
echo $nbLignes


while [ $nbLignes -ne 0 ]
do
    echo "$!" > boucle.pid
    sleep 30
    for i in $(seq 1 $nbLignes)
    do
        horaire=$(sed "${i}q;d" horaires.db | cut -d: -f1)
        date=$(date +%H%M)
        message=$(sed "${i}q;d" horaires.db)
        if [ $date = $horaire ]
        then
        xmessage $message -buttons FERMER
        sed -i "${i}d" horaires.db
        nbLignes=$(< horaires.db wc -l)
        fi
    done
done